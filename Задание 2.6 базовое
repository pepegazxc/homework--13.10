import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Введите n секунд:  ");
        int n = sc.nextInt();

        int min;
        int hour;
        int second;

        hour = n / 3600;
        System.out.println(hour + " полных часов прошло с начала суток\n");

        min = n % 3600 / 60;
        System.out.println(min + " полных минут прошло с начала очередного часа\n");

        second = n % 60;
        System.out.println(second + " полных секунд прошло с начала очередной минуты ");

    }
}
